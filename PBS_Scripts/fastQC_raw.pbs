workdir = "insert/the/path/to/your/files/here"
outputdir = "insert name of output directory here"

cd $workdir

mkdir $outputdir

for f in $(ls *_paired.fq.gz)
do
zcat ${f} | ~/FastQC/fastqc -t 4 -o FastQC_Raw_Output ${f}
done 
