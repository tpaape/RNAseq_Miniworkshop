#Initial QC run     
#!/bin/bash
#PBS -N split
#PBS -l ncpus=16
#PBS -l mem=32gb
#PBS -m ae
#PBS -M mclear@bnl.gov

source activate py3.7
    
cd $PBS_O_WORKDIR

for f in $(ls *fastq.gz | sed 's/fastq.gz//')
do
zcat ${f}fastq.gz | reformat.sh in=${f} out1=${f}_R1.fastq out2=${f}_R2.fastq 
done 

gzip *.fastq
